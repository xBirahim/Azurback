{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "drizzle*.ts", "migrations/**/*.ts"],
    "exclude": ["node_modules"]
}
